{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["**/*.js", "**/*.json"] }
    }
  ],
  "routes": [
    // Handle preflight OPTIONS requests for ALL API routes
    {
      "src": "/api/(.*)",
      "methods": ["OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "https://bahgat9.github.io",
        "Access-Control-Allow-Methods": "GET,POST,PUT,DELETE,PATCH,OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization, X-Requested-With",
        "Access-Control-Allow-Credentials": "true",
        "Access-Control-Max-Age": "86400"
      },
      "dest": "/dev/null", 
      "status": 204 
    },
    // Handle actual API requests (GET, POST, etc.)
    {
      "src": "/api/(.*)",
      "headers": {
        "Access-Control-Allow-Origin": "https://bahgat9.github.io",
        "Access-Control-Allow-Credentials": "true"
      },
      "dest": "server.js"
      // Removed specific methods here to let Express handle method routing within server.js
      // Vercel will forward GET, POST, etc., to server.js
    },
    // Route for the root, if your server.js handles it
    {
      "src": "/",
      "dest": "server.js",
      "methods": ["GET"]
    }
  ],
  "env": {
    "NODE_ENV": "production",
